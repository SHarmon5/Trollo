<h1><u><%= @list.name%></u></h1>
<h4>Due Date: <%= @list.due_date %></h4>
<h4>Description: <%= @list.details %></h4>

<br />          
<% @list.tasks.each do |task| %>
  <h3><%= task.details %></h3>
  <%= link_to 'Edit', edit_list_task_path(task.list_id, task),
   class: "ui orange button" %>
<% end %>

<br />
<%= link_to 'Add tasks', new_list_task_path(@list) %> |
<%= link_to 'Edit list', edit_board_list_path([@board]) %> |
<%= link_to 'Delete list', @list, method: :delete %> |
<%= link_to 'Back To lists', board_lists_path(@board) %>



 